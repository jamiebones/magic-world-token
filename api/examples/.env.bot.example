# =============================================================================
# Bot Configuration Example
# =============================================================================
# Copy this file to .env and configure for your bot
# NEVER commit the actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# API CONNECTION
# -----------------------------------------------------------------------------

# URL of the Bot API
# Development: http://localhost:3000/api/bot
# Production: https://your-api-domain.com/api/bot
BOT_API_URL=http://localhost:3000/api/bot

# API Key (REQUIRED - must have 'bot' permission)
# Generate via: POST /api/admin/generate-key with permissions: ["bot"]
# Example: curl -X POST http://localhost:3000/api/admin/generate-key \
#            -H "X-Admin-Secret: your-admin-secret" \
#            -H "Content-Type: application/json" \
#            -d '{"name":"Bot Key","permissions":["bot"]}'
BOT_API_KEY=

# -----------------------------------------------------------------------------
# TRADING STRATEGY
# -----------------------------------------------------------------------------

# Target peg price in USD (default: $0.01)
TARGET_PEG_USD=0.01

# Deviation threshold percentage (default: 5.0%)
# Bot will only trade if price deviates more than this percentage from target
# Example: 5.0 means trade if price is > $0.0105 or < $0.0095
DEVIATION_THRESHOLD=5.0

# Maximum trade size in BNB (default: 0.1 BNB)
# Start small for testing, increase gradually for production
MAX_TRADE_BNB=0.1

# Maximum trade size in MWT (for SELL operations)
# Default: 100000 MWT
MAX_TRADE_MWT=100000

# Slippage tolerance percentage (default: 1.0%)
SLIPPAGE_TOLERANCE=1.0

# -----------------------------------------------------------------------------
# BOT BEHAVIOR
# -----------------------------------------------------------------------------

# How often to check prices and potentially trade (in milliseconds)
# Default: 60000 (1 minute)
# Minimum recommended: 30000 (30 seconds)
# Note: More frequent checks = more RPC calls = higher costs
CHECK_INTERVAL_MS=60000

# Cooldown period between trades (in milliseconds)
# Default: 300000 (5 minutes)
# Prevents rapid consecutive trades
COOLDOWN_PERIOD_MS=300000

# Enable/disable actual trading
# false = Dry-run mode (no real trades, just logs)
# true = Live trading (real trades executed)
TRADING_ENABLED=false

# Dry-run mode (even if TRADING_ENABLED=true, dry-run overrides)
# false = Execute real trades (if TRADING_ENABLED=true)
# true = Simulate trades only (safe for testing)
DRY_RUN=true

# -----------------------------------------------------------------------------
# RISK MANAGEMENT
# -----------------------------------------------------------------------------

# Daily trade limit in BNB (default: 10 BNB)
# Bot will stop trading if this limit is reached
DAILY_LIMIT_BNB=10.0

# Minimum BNB balance to maintain (for gas fees)
# Bot will not trade if BNB balance falls below this
MIN_BNB_BALANCE=0.1

# Minimum MWT balance to maintain
# Bot will not sell MWT if balance falls below this
MIN_MWT_BALANCE=1000

# Maximum price impact tolerance (default: 10%)
# Bot will reject trades with price impact exceeding this
MAX_PRICE_IMPACT=10.0

# Stop-loss percentage (optional)
# Bot will stop trading if portfolio value drops by this percentage
# STOP_LOSS_PERCENT=20.0

# -----------------------------------------------------------------------------
# TRADING HOURS (OPTIONAL)
# -----------------------------------------------------------------------------

# Enable trading hours restriction
TRADING_HOURS_ENABLED=false

# Trading hours (0-23, in UTC)
TRADING_START_HOUR=0
TRADING_END_HOUR=24

# Days of week to trade (comma-separated: 0=Sunday, 6=Saturday)
# TRADING_DAYS=1,2,3,4,5  # Monday to Friday only

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable verbose logging (detailed output)
VERBOSE=false

# Log file path (optional)
# LOG_FILE=./logs/bot.log

# Enable trade notifications (requires webhook setup)
# ENABLE_NOTIFICATIONS=false
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# -----------------------------------------------------------------------------
# ADVANCED OPTIONS
# -----------------------------------------------------------------------------

# Gas price strategy: slow, average, fast
GAS_PRICE_STRATEGY=average

# Maximum gas price in Gwei (optional, for BSC usually 3-5 Gwei)
# MAX_GAS_PRICE_GWEI=10

# RPC endpoint override (if not using API's default)
# BSC_RPC_URL=https://bsc-dataseed1.binance.org

# Enable emergency stop on consecutive failures
EMERGENCY_STOP_ON_FAILURES=true
MAX_CONSECUTIVE_FAILURES=5

# Health check interval (in milliseconds)
# How often to verify API is still healthy
HEALTH_CHECK_INTERVAL_MS=300000

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY_MS=5000

# -----------------------------------------------------------------------------
# MONITORING & METRICS
# -----------------------------------------------------------------------------

# Enable performance metrics tracking
ENABLE_METRICS=true

# Metrics export interval (in milliseconds)
METRICS_INTERVAL_MS=300000

# Enable Prometheus metrics endpoint (requires prometheus client)
# ENABLE_PROMETHEUS=false
# PROMETHEUS_PORT=9090

# -----------------------------------------------------------------------------
# TESTING & DEVELOPMENT
# -----------------------------------------------------------------------------

# Enable test mode (uses testnet if available)
TEST_MODE=false

# Mock trades (simulate trades without API calls)
# Useful for testing strategy logic
MOCK_TRADES=false

# Enable debug mode (extra logging, no rate limiting)
DEBUG_MODE=false


